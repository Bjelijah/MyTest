<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btn_rx_thread_ui"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="42dp"
        android:layout_marginTop="25dp"
        android:text="ui线程" />

    <Button
        android:id="@+id/btn_rx_thread_io"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btn_rx_thread_ui"
        android:layout_below="@+id/btn_rx_thread_ui"
        android:layout_marginTop="17dp"
        android:text="io线程" />

    <Button
        android:id="@+id/btn_rx_task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:text="task"
        android:layout_below="@+id/btn_rx_thread_io"
        android:layout_alignStart="@+id/btn_rx_thread_io" />

    <Button
        android:id="@+id/btn_rx_retrofit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="retrofit"
        android:layout_below="@+id/btn_rx_task"
        android:layout_alignStart="@+id/btn_rx_task"
        android:layout_marginTop="17dp" />
</RelativeLayout>